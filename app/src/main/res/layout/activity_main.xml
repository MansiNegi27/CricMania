<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mansi.cricmania.MainActivity">

    <TextView
        android:id="@+id/CM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to CricMania!"
        android:textSize="26sp"
        android:padding="14dp"
        android:textColor="@android:color/black"

        />
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:src="@drawable/index"
        android:layout_below="@id/CM"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/overs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Overs:"
        android:layout_below="@id/img"
        android:textSize="24sp"
        android:textColor="#000000"

        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/enter"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/overs"
        android:hint="enter the no.of overs here"
        android:textColorHint="#777777"
        android:inputType="number"
        />
    <Button
        android:id="@+id/go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go"
        android:background="#1AC734"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:onClick="go"
        />


</RelativeLayout>
